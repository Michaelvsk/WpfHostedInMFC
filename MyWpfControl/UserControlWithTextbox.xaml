<UserControl x:Class="MyWpfControl.UserControlWithTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWpfControl"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox TextWrapping="Wrap" Grid.Row="0" Text="This text cannot be edited when hosted within MFC app ..."></TextBox>
        <Button Grid.Row="1" Click="Button_Click">Click to open modal dialog</Button>
    </Grid>
</UserControl>
